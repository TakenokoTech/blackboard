<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/import_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#be000000"
        android:clickable="true" />
    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="match_parent"
        android:background="#FCFCFC"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="24dp">
            <TextView
                android:id="@+id/import_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"
                android:textColor="@color/colorText"/>
            <TextView
                android:id="@+id/import_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/colorSubText"/>
            <tech.takenoko.blackboardapp.view.IOGridView
                android:id="@+id/import_grid"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:numColumns="2"
                android:layout_marginTop="8dp"
                android:verticalSpacing="4dp"
                android:horizontalSpacing="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FFF"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">
            <TextView
                android:id="@+id/import_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/btn_ripple"
                android:padding="8dp"
                android:text="@string/load_delete"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#FFF"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/import_disagree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/btn_ripple"
                android:padding="8dp"
                android:text="disagree"
                android:textColor="@color/accent_material_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/import_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/btn_ripple"
                android:padding="8dp"
                android:text="agree"
                android:textColor="@color/accent_material_light"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>